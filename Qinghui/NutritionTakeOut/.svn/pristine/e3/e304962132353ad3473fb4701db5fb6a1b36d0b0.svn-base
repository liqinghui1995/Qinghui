<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
     <item>  
        <shape>  
            <padding  
                android:bottom="-2dp"  
                android:left="-2dp"  
                android:right="0dp"  
                android:top="-2dp" />  
  
            <solid android:color="#00ff00ff" />  
        </shape>  
    </item>  
    <!-- This is the main color -->  
    <item>  
        <shape>  
            <solid android:color="#00ff00ff" />  
  
            <corners android:radius="0dip" />  
  
            <size android:width="40dip" />  
  
            <stroke  
                android:width="2px"  
                android:color="#CCCC99" />  
        </shape>  
    </item>  

</layer-list>
