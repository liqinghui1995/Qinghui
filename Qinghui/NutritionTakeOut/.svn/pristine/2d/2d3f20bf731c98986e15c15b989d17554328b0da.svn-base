<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_red_small_1_n" >

            <ImageView
                android:id="@+id/change_name_returnbt"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/leftjt" />

            <TextView
                android:id="@+id/change_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="更改昵称"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <Button
            android:id="@+id/sava_change_name_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/change_name_edittext"
            android:layout_below="@+id/change_name_edittext"
            android:layout_margin="10dp"
            android:layout_marginTop="26dp"
            android:background="#f00"
            android:text="@string/change_name_button"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/change_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginTop="98dp"
            android:ems="10"
            android:hint="请输入昵称(1-20个字符)"
            android:textSize="25sp" />

    </RelativeLayout>

	
</LinearLayout>