<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Share" >

    <RelativeLayout
        android:id="@+id/set_share_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_red_small_1_n" >

        <ImageView
            android:id="@+id/set_share_imgback"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/arrow_to_history_order_detail" />

        <TextView
            android:id="@+id/set_share_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/set_share_textview1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_share_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/set_share_relativeLayout1"
        android:background="@drawable/ic_share_qrcode_bg" >

        <ImageView
            android:id="@+id/set_share_imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_share_qrcode" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/set_share_imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/set_share_relativeLayout2"
        android:background="@drawable/sellinfo" />

    <ImageView
        android:id="@+id/set_share_imggift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_share_imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/sharegift" />

</RelativeLayout>