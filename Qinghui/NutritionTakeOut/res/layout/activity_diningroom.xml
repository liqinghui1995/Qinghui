<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nourishment_u12">
        <TextView 
           android:id="@+id/diningroom_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/nourishment_u10"
            android:textColor="#FF0000"
            android:text="@string/dining_order"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView 
            android:id="@+id/diningroom_hot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FF0000"
            android:background="@drawable/nourishment_u10"
            android:layout_height="wrap_content"
            android:text="@string/dining_hot"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView 
            android:id="@+id/diningroom_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/nourishment_u10"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="@string/dining_activity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>
    <com.example.nutrition.diningroom.activity.view.XListView
        android:id="@+id/DiningRoomListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.example.nutrition.diningroom.activity.view.XListView>
</LinearLayout>
