<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="horizontal" >

     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/nourishment_list_item_img"
            android:layout_width="75dp"
            android:layout_height="55dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView android:id="@+id/nourishment_list_item_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mifan"/>
        <TextView android:id="@+id/nourishment_list_item_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xiaoshouliang"/>
        <TextView android:id="@+id/nourishment_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xyuan"/>
        <TextView android:id="@+id/nourishment_list_item_incro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xyuan"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/nourishment_list_item_add_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/nourishment_add" /> 

</LinearLayout>