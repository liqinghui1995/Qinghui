<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/set_giftcenter_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/set_giftcenter_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/set_giftcenter_item_img"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/set_giftcenter_item_img"
        android:text="TextView" />

    <TextView
        android:id="@+id/set_giftcenter_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/set_giftcenter_item_img"
        android:layout_alignLeft="@+id/set_giftcenter_item_title"
        android:textColor="#f00"
        android:text="TextView" />

    <Button
        android:id="@+id/set_giftcenter_item_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        
        android:text="@string/set_giftcenter_item_btn" />

</RelativeLayout>
