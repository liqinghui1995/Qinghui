<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="40dp">
    
    <TextView 
        android:id="@+id/shopping_tvname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="西红柿炒鸡蛋"
        />

    
    <ImageView
        android:id="@+id/imgPlus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/background_cart_plus" />
    
    <TextView 
        android:id="@+id/counnt_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:layout_toLeftOf="@id/imgPlus"
        android:layout_centerVertical="true"
        />
    
    <ImageView
        android:id="@+id/imgMinus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/counnt_tv"
        android:layout_centerVertical="true"
        android:src="@drawable/background_cart_minus" />
    
    <TextView 
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#FF0000"
        android:layout_toLeftOf="@id/imgMinus"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />
    
</RelativeLayout>